<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFFFDC"
    tools:context=".LoginFragment">

    <FrameLayout
        android:layout_width="414dp"
        android:layout_height="131dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="45dp"
            android:text="Login"
            android:textAlignment="center"
            android:textColor="#454141"
            android:textSize="34sp"
            android:textStyle="bold" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="391dp"
        android:layout_height="415dp"
        android:layout_marginTop="144dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="56dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/user_login_logo"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/user_login_logo" />

            <EditText
                android:id="@+id/loginEmail"
                android:layout_width="290dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Email"
                android:inputType="text" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="38dp"
            android:layout_marginLeft="55dp">

            <TextView
                android:id="@+id/notificationErrorEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#FF6057"
                android:textSize="14sp"
                android:visibility="gone" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="56dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/password_login_logo"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/user_password_logo" />

            <EditText
                android:id="@+id/loginPassword"
                android:layout_width="290dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="38dp"
            android:layout_marginLeft="55dp">

            <TextView
                android:id="@+id/notificationErrorPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#FF6057"
                android:textSize="14sp"
                android:visibility="gone" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cekIngatSaya"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Ingat saya"
                android:textColor="#AAA9AB"
                android:textSize="16sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#78DC82"
            android:text="LOGIN" />

        <TextView
            android:id="@+id/btnLupaPassword"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="5dp"
            android:text="Lupa password"
            android:textAlignment="center"
            android:textColor="#AAA9AB"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>